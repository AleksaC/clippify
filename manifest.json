{
  "name": "Clippify",
  "version": "0.1.0",
  "description": "Copying code made easy.",
  "icons": { "128": "icons/icon128.png" },
  "permissions": ["storage", "tabs"],
  "browser_action": {
    "default_popup": "src/popup.html"
  },
  "options_page": "src/options.html",
  "background": { "scripts": ["hot-reload.js"] },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["src/inject.css"],
      "js": ["src/inject.js"]
    }
  ],
  "manifest_version": 2
}
